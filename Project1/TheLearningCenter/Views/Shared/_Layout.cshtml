<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Learning Center</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        h3 {
            color: #0080FF;
        }

        .text-left {
            padding: 2rem;
            background-color: #f1f1f1;
            border-radius: .3rem;
            margin-bottom: 2rem;
        }

        .display-4 {
            font-weight: 500;
        }

        .btn-success {
            background-color: #0066CC;
            border-color: #0066CC;
        }

            .btn-success:hover {
                background-color: #004C99;
                border-color: #004C99;
            }

            .btn-success:not(:disabled):not(.disabled):active {
                background-color: #004C99;
                border-color: #004C99;
            }

            .btn-success a {
                color: white;
            }

                .btn-success a:hover {
                    text-decoration: none;
                }

        .flex-container {
            display: flex;
        }

        .flex-item {
            flex: 1 1 0;
            text-align: left;
        }

        input {
            background-color: white;
            padding: .3rem .5rem;
            margin: .2rem 0;
            border: 1px solid #ccc;
            border-radius: .3rem;
            display: block;
        }

            input[type=text] {
                width: 15rem;
            }

            input[type=submit]:hover {
                background-color: gainsboro;
            }

        .validation-summary-errors {
            color: #f00;
        }

        .row1 {
            display: flex;
            justify-content: flex-start;
            align-items: baseline;
        }

        .col1 {
            width: 25%;
            text-align: right;
            padding-right: 2rem;
            white-space: nowrap;
        }

        .col2 {
            width: 30%;
        }

        .bg-grey {
            background-color: #404040;
        }

        input[type=password] {
            width: 15rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-grey border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">The Learning Center</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - The Learning Center
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
