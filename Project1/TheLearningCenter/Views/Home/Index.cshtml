@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <h1 class="display-5">The Learning Center</h1>
    <p>The place for technology classes</p>

    <div class="btn btn-success">
        @Html.ActionLink("Learn More >>", "About")
    </div>
</div>

<div class="flex-container">
    <div class="flex-item">
        <h3>@Html.ActionLink("Class List", "ClassList")</h3>
