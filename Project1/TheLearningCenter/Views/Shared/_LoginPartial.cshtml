@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;

@if (Context.Session.GetString("Email") != null)
{
    <form asp-action="Logoff" class="navbar-right">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item text-light" style="padding-top: .5rem; padding-right: 5rem;">
                @{
                    var user = JsonConvert.DeserializeObject<UserModel>(Context.Session.GetString("Email"));
                }
                Hello @user.Email!
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Logoff">Log off</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item" style="padding-right: 5rem;">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Login">Log in</a>
        </li>
    </ul>
}