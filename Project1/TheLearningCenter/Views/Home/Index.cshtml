    </div>

    <div class="flex-item">
        <h3>@Html.ActionLink("Your enrolled classes", "StudentClasses")</h3>
        <p>See the classes you are enrolled in.</p>
    </div>

    <div class="flex-item">
        <h3>@Html.ActionLink("Enroll in a class", "EnrollInClass")</h3>
        <p>Take a new class.</p>
    </div>
</div>



